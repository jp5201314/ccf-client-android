<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.cnlinfo.ccf">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许读取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许读取wifi网络状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许应用以只读的方式访问手机设备的信息，通过获取的信息来唯一标识用户-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"  />
    <!--获取当前应用是否在显示应用，可以更精准的统计用户活跃-->
    <uses-permission android:name="android.permission.GET_TASKS"  />

    <application
        android:name=".CCFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ccf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">
        <activity
            android:name=".activity.MainPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ********************************************TALKING DATA********************************************************** -->


        <!-- TalkingData -->
        <meta-data
            android:name="TD_APP_ID"
            android:value="5349CA59AD0142739106215E4ED1679D" />
        <meta-data
            android:name="TD_CHANNEL_ID"
            android:value="${TD_CHANNEL_ID_VALUE}" />


        <!-- 用户注册见面 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <!-- 登录注册展示界面 -->
        <activity
            android:name=".activity.LoginRegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <!-- 忘记密码页面 -->
        <activity
            android:name=".activity.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <!-- 密保找回页面 -->
        <activity
            android:name=".activity.CallBackBySecurityQuestionActivity"
            android:screenOrientation="portrait" />
        <!-- 电话号码找回页面 -->
        <activity
            android:name=".activity.CallBackByPhoneNumActivity"
            android:screenOrientation="portrait" />
        <!--引导页-->
        <activity
            android:name=".activity.GuideActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>