<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.cnlinfo.ccf">
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许读取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许读取wifi网络状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:name=".CCFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ccf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">
        <activity android:name=".activity.LoginRegisterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 用户注册见面 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <!-- 主页展示界面 -->
        <activity
            android:name=".activity.MainPageActivity"
            android:screenOrientation="portrait" />
        <!-- 忘记密码页面 -->
        <activity
            android:name=".activity.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <!--密保找回页面-->
        <activity android:name=".activity.CallBackBySecurityQuestionActivity"
            android:screenOrientation="portrait"/>
        <!--电话号码找回页面-->
        <activity android:name=".activity.CallBackByPhoneNumActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>