<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_customer_register_background">

    <include layout="@layout/item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:text="商家注册"
        style="@style/text_333_18"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="邀请码"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_invitation_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:hint="88888"
                android:gravity="center"
                style="@style/text_515151_12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                style="@style/text_515151_12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="分享用户"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_share_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:hint="推荐人"
                android:gravity="center"
                style="@style/text_515151_12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="服务用户"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_service_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                style="@style/text_515151_12"
                android:gravity="center"
                android:hint="接点人"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="代理服务"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_agency_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:gravity="center"
                android:hint="区服务人员"
                style="@style/text_515151_12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="代理类型"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_agency_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                style="@style/text_515151_12"
                android:hint="省代、市代、区县代"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                style="@style/text_515151_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登录密码" />

            <EditText
                android:id="@+id/et_login_pass"
                style="@style/text_515151_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/edit_text_style"
                android:text="数字+字母"
                android:gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_affirm_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                style="@style/text_515151_12"
                android:gravity="center"
                android:text="数字+字母"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:inputType="phone"
                android:gravity="center"
                android:text="11位手机号"
                style="@style/text_515151_12"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:layout_weight="1"
                style="@style/text_515151_12"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style" />

                <TextView
                    android:id="@+id/tv_get_verification_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_verification_style"
                    android:gravity="center"
                    android:text="获取验证码"
                    style="@style/text_f5543a_12"
                    android:onClick="gainVerificationCode"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_register_customer"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="注册"
            android:background="@drawable/button_register_style"
            android:layout_gravity="center"
            android:layout_marginTop="58dp"
            style="@style/text_ffffff_12"
            />
    </LinearLayout>
</LinearLayout>